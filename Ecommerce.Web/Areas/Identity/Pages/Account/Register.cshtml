@page
@using Ecommerce.Utilities
@model RegisterModel

<style>
    :root {
        --primary-color: #4361ee;
        --primary-dark: #3a0ca3;
        --primary-light: #4895ef;
        --secondary-color: #f72585;
        --success-color: #4cc9f0;
        --dark-color: #1a1a2e;
        --light-color: #f8f9fa;
        --gray-color: #6c757d;
    }

    .register-section {
        background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        min-height: 70vh;
        display: flex;
        align-items: center;
        margin:40px 0;
    }

    .register-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
    }

    .register-form {
        padding: 3rem;
        background: white;
    }

    .register-img-container {
        background: linear-gradient(to bottom right, var(--primary-color), var(--primary-dark));
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        height: 100%;
        position: relative;
        overflow: hidden;
    }

    .register-img {
        width: 100%;
        height: auto;
        max-width: 500px;
        filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.2));
        z-index: 1;
        transition: transform 0.5s ease;
    }

        .register-img:hover {
            transform: scale(1.03);
        }

    .register-img-container::before {
        content: '';
        position: absolute;
        width: 200px;
        height: 200px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        top: -50px;
        right: -50px;
    }

    .register-img-container::after {
        content: '';
        position: absolute;
        width: 300px;
        height: 300px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 50%;
        bottom: -100px;
        left: -100px;
    }

    .form-control {
        border-radius: 8px;
        padding: 12px 15px;
        border: 1px solid #e2e8f0;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.2);
        }

    .btn-register {
        background-color: var(--primary-color);
        border: none;
        padding: 12px;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        border-radius: 8px;
    }

        .btn-register:hover {
            background-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(67, 97, 238, 0.3);
        }

    .register-title {
        font-weight: 700;
        color: var(--dark-color);
        margin-bottom: 1.5rem;
        position: relative;
    }

        .register-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 50px;
            height: 4px;
            background: var(--primary-color);
            border-radius: 2px;
        }

    .role-selection {
        margin: 1.5rem 0;
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 8px;
    }

    .role-option {
        margin-right: 1.5rem;
    }

    .form-floating label {
        color: var(--gray-color);
        transition: all 0.3s ease;
    }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        color: var(--primary-color);
        transform: scale(0.85) translateY(-0.5rem) translateX(0.15rem);
    }

    .password-strength {
        height: 4px;
        background: #e9ecef;
        margin-top: 5px;
        border-radius: 2px;
        overflow: hidden;
    }

    .password-strength-bar {
        height: 100%;
        width: 0;
        transition: width 0.3s ease;
    }

    .form-check-input {
        width: 1.2em;
        height: 1.2em;
        margin-top: 0.2em;
    }

        .form-check-input:checked {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

    .form-check-label {
        margin-left: 0.5rem;
        color: var(--dark-color);
    }
</style>

<section class="register-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="register-card">
                    <div class="row g-0">
                        <div class="col-md-7">
                            <div class="register-form">
                                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <h2 class="register-title">Create Your Account</h2>
                                    <p class="text-muted mb-4">Join us today and start your shopping journey</p>

                                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3">
                                                <input asp-for="Input.Name" class="form-control" autocomplete="name"
                                                       aria-required="true" placeholder="Your full name" />
                                                <label asp-for="Input.Name">Full Name</label>
                                                <span asp-validation-for="Input.Name" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3">
                                                <input asp-for="Input.Email" class="form-control" autocomplete="email"
                                                       aria-required="true" placeholder="name@example.com" />
                                                <label asp-for="Input.Email">Email Address</label>
                                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-floating mb-3">
                                                <input asp-for="Input.Address" class="form-control" autocomplete="address"
                                                       aria-required="true" placeholder="Your address" />
                                                <label asp-for="Input.Address">Street Address</label>
                                                <span asp-validation-for="Input.Address" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-floating mb-3">
                                                <input asp-for="Input.City" class="form-control" autocomplete="city"
                                                       aria-required="true" placeholder="Your city" />
                                                <label asp-for="Input.City">City</label>
                                                <span asp-validation-for="Input.City" class="text-danger small"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3 position-relative">
                                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password"
                                                       aria-required="true" placeholder="password" id="password" />
                                                <label asp-for="Input.Password">Password</label>
                                                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                                <div class="password-strength">
                                                    <div class="password-strength-bar" id="password-strength-bar"></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3">
                                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password"
                                                       aria-required="true" placeholder="confirm password" />
                                                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                                            </div>
                                        </div>
                                    </div>

                                    @if (User.IsInRole(SD.AdminRole))
                                    {
                                        <div class="role-selection mb-4">
                                            <h6 class="mb-3">Select User Role:</h6>
                                            <div class="d-flex flex-wrap">
                                                <div class="form-check role-option">
                                                    <input class="form-check-input" type="radio" value="@SD.AdminRole"
                                                           name="RoleRadio" id="adminRole" />
                                                    <label class="form-check-label" for="adminRole">
                                                        @SD.AdminRole
                                                    </label>
                                                </div>
                                                <div class="form-check role-option">
                                                    <input class="form-check-input" type="radio" value="@SD.EditorRole"
                                                           name="RoleRadio" id="editorRole" />
                                                    <label class="form-check-label" for="editorRole">
                                                        @SD.EditorRole
                                                    </label>
                                                </div>
                                                <div class="form-check role-option">
                                                    <input class="form-check-input" type="radio" value="@SD.CustomerRole"
                                                           name="RoleRadio" id="customerRole" checked />
                                                    <label class="form-check-label" for="customerRole">
                                                        @SD.CustomerRole
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                    <div class="d-grid gap-2">
                                        @if (User.IsInRole(SD.AdminRole))
                                        {
                                            <button id="registerSubmit" type="submit" class="btn btn-register btn-primary py-3">
                                                <i class="fas fa-user-plus me-2"></i> Create New User
                                            </button>
                                        }
                                        else
                                        {
                                            <button id="registerSubmit" type="submit" class="btn btn-register btn-primary py-3">
                                                <i class="fas fa-user-edit me-2"></i> Register Now
                                            </button>
                                        }
                                    </div>

                                    <div class="text-center mt-4">
                                        <p class="text-muted">
                                            Already have an account?
                                            <a asp-page="./Login" class="text-primary fw-semibold">Sign in here</a>
                                        </p>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-md-5 d-none d-md-block">
                            <div class="register-img-container">
                                <img class="register-img" src="https://img.freepik.com/free-vector/sign-up-concept-illustration_114360-7885.jpg" alt="Register Illustration" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Password strength indicator
        document.getElementById('password').addEventListener('input', function () {
            const password = this.value;
            const strengthBar = document.getElementById('password-strength-bar');
            let strength = 0;

            if (password.length > 0) strength += 20;
            if (password.length >= 8) strength += 20;
            if (/[A-Z]/.test(password)) strength += 20;
            if (/[0-9]/.test(password)) strength += 20;
            if (/[^A-Za-z0-9]/.test(password)) strength += 20;

            strengthBar.style.width = strength + '%';

            if (strength < 40) {
                strengthBar.style.backgroundColor = '#dc3545';
            } else if (strength < 80) {
                strengthBar.style.backgroundColor = '#ffc107';
            } else {
                strengthBar.style.backgroundColor = '#28a745';
            }
        });

        // Animation for form inputs
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('focus', function () {
                this.parentElement.querySelector('label').style.color = 'var(--primary-color)';
            });

            input.addEventListener('blur', function () {
                if (!this.value) {
                    this.parentElement.querySelector('label').style.color = 'var(--gray-color)';
                }
            });
        });
    </script>
}