@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<style>
    :root {
        --primary-color: #4F46E5;
        --primary-hover: #4338CA;
        --text-color: #111827;
        --light-gray: #F9FAFB;
        --border-color: #E5E7EB;
    }

    .password-reset-container {
        max-width: 500px;
        margin: 0 auto;
        padding: 2rem;
        margin-top:90px;
    }

    .password-reset-card {
        background: white;
        border-radius: 12px;
        padding: 2.5rem;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    }

    .password-reset-title {
        color: var(--text-color);
        font-size: 1.75rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .password-reset-subtitle {
        color: #6B7280;
        margin-bottom: 2rem;
    }

    .form-control {
        padding: 0.875rem 1rem;
        border: 1px solid var(--border-color);
        border-radius: 8px;
        margin-bottom: 1.25rem;
        transition: all 0.2s;
    }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
            outline: none;
        }

    .btn-reset {
        width: 100%;
        padding: 0.875rem;
        background-color: var(--primary-color);
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 500;
        cursor: pointer;
        transition: background 0.2s;
    }

        .btn-reset:hover {
            background-color: var(--primary-hover);
        }

    .back-to-login {
        text-align: center;
        margin-top: 1.5rem;
        color: #6B7280;
    }

        .back-to-login a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
        }
</style>

<div class="password-reset-container">
    <div class="password-reset-card">
        <h1 class="password-reset-title">Forgot your password?</h1>
        <p class="password-reset-subtitle">Enter your email and we'll send you a link to reset your password.</p>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-group">
                <input asp-for="Input.Email" class="form-control"
                       autocomplete="username"
                       aria-required="true"
                       placeholder="Enter your email" />
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn-reset">Reset Password</button>
        </form>

        <div class="back-to-login">
            <a asp-page="./Login">Back to sign in</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}