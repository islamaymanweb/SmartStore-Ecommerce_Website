@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

<style>
    :root {
        --error-color: #DC2626;
        --error-light: #FEE2E2;
        --text-color: #111827;
        --gray-color: #6B7280;
    }

    body {
        background-color: #F9FAFB;
        font-family: 'Segoe UI', system-ui, sans-serif;
    }

    .access-denied-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 2rem;
        text-align: center;
    }

    .access-denied-card {
        background: white;
        border-radius: 12px;
        padding: 3rem 2rem;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
    }

    .access-denied-icon {
        font-size: 4rem;
        color: var(--error-color);
        margin-bottom: 1.5rem;
    }

    .access-denied-title {
        color: var(--error-color);
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .access-denied-message {
        color: var(--text-color);
        font-size: 1.1rem;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn-primary {
        background-color: var(--error-color);
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        color: white;
        font-weight: 500;
        text-decoration: none;
        transition: background 0.2s;
    }

        .btn-primary:hover {
            background-color: #B91C1C;
        }

    .btn-secondary {
        background-color: white;
        border: 1px solid var(--border-color);
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        color: var(--text-color);
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s;
    }

        .btn-secondary:hover {
            background-color: #F3F4F6;
        }
</style>

<div class="access-denied-container">
    <div class="access-denied-card">
        <div class="access-denied-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="4.93" y1="4.93" x2="19.07" y2="19.07"></line>
            </svg>
        </div>

        <h1 class="access-denied-title">Access Denied</h1>

        <p class="access-denied-message">
            You don't have permission to access this page. If you believe this is an error,
            please contact your administrator or try signing in with a different account.
        </p>

        <div class="action-buttons">
            <a asp-page="/Account/Login" class="btn-primary">
                Sign In with Different Account
            </a>
            <a href="/" class="btn-secondary">
                Return to Home
            </a>
        </div>
    </div>
</div>